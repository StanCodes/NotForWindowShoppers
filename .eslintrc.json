{
    "globals": {
        "graphql": true,
        "theme": true,
        "classes": true
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "react/jsx-pascal-case": [
            2,
            { "allowAllCaps": true}
        ],
        "jsx-quotes": [
            "error", 
            "prefer-single"
        ],
        "react/jsx-closing-bracket-location": [1, "tag-aligned"],
        "react/jsx-closing-tag-location": 1,
        "no-multi-spaces": ["error", { "ignoreEOLComments": true }],
        "react/jsx-tag-spacing": 2,
        "react/jsx-boolean-value":[2, "always"],
        "react/self-closing-comp": ["error", {
            "component": true,
            "html": true
          }]
    }
}